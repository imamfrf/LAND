<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/jadwal_fragment">
    >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginBottom="40dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Langganan"
                        android:textColor="#FF7C06"
                        android:textSize="17sp"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#FF7C06"
                        android:id="@+id/spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        >
                    </Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:text="Pilih Hari"
                        android:textColor="#FF7C06"
                        android:textSize="17sp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="#FF7C06"
                        android:id="@+id/spinner2"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        >
                    </Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keterangan"

                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Total biaya transportasi anda adalah"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/txt_biaya"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Biaya pencucian anda di list berikut (Per KG)"
                        android:layout_marginHorizontal="5dp"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:text="1. Cuci Kering Setrika (Rp 10.000)"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:text="2. Cuci Kering (Rp 10.000)"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:text="3. Setrika (Rp 10.000)"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:text="4. Cuci Basah (Rp 10.000)"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:text="5. Cuci Selimut (Satuan) (Rp 10.000)"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:text="6. Cuci Sprei (Satuan) (Rp 10.000)"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:text="Kode Promo (Optional)"
                        android:textColor="#FF7C06"
                        android:textSize="17sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/input_promo"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#FF7C06" />
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:textColor="#FFF"
                            android:background="#FF7C06"
                            android:layout_marginBottom="5dp"
                            android:text="CEK"
                            android:id="@+id/btn_cek_promo"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="40dp"
                        android:id="@+id/txt_keterangan_promo"/>

                    <Button
                        android:id="@+id/bt_sub_jdw"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="SUBMIT"
                        android:textColor="#FFF"
                        android:background="#FF7C06" />
                </LinearLayout>
            </RelativeLayout>

        </ScrollView>

</RelativeLayout>